{
  "name": "Kilo Sugar",
  "description": "A fully-fetched ticketing companion.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["sidePanel", "clipboardRead", "clipboardWrite", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open_calculator": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Open calculator popup"
    }
  }
}
